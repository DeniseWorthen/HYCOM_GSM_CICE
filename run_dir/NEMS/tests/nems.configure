# MED #
MED_model:                      nems
MED_petlist_bounds:             0 143
MED_attributes::
  Verbosity = 1
  DumpFields = false
  DumpRHs = false
  coldstart = false
  restart_interval = 0
::

# ATM #
ATM_model:                      gsm
ATM_petlist_bounds:             0 143
ATM_attributes::
  Verbosity = max
  DumpFields = false
::

# OCN #
OCN_model:                      hycom
OCN_petlist_bounds:             168 267
OCN_attributes::
  Verbosity = max
  DumpFields = false
  restart_interval = 9999999
::

# ICE #
ICE_model:                      cice
ICE_petlist_bounds:             144 167
ICE_attributes::
  Verbosity = max
  DumpFields = false
::

# Run Sequence #
runSeq::
  @1800.0
    MED MedPhase_prep_ocn
    MED -> OCN :remapMethod=redist
    OCN
    @900.0
      MED MedPhase_prep_ice
      MED MedPhase_prep_atm
      MED -> ATM :remapMethod=redist
      MED -> ICE :remapMethod=redist
      ATM
      ICE
      ATM -> MED :remapMethod=redist
      ICE -> MED :remapMethod=redist
      MED MedPhase_atm_ocn_flux
      MED MedPhase_accum_fast
    @
    OCN -> MED :remapMethod=redist
    MED MedPhase_write_restart
  @
::
